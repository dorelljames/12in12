const steps = [
  {
    number: "01",
    title: "Choose Your Project",
    description:
      "Pick something you're excited to build. It could be a tool, service, or content product that solves a real problem.",
    icon: "üí°",
  },
  {
    number: "02",
    title: "30-Day Sprint",
    description:
      "Focus on core features and ship fast. Get your SLC (not MVP) out there and start collecting real user feedback.",
    icon: "üèÉ‚Äç‚ôÇÔ∏è",
  },
  {
    number: "03",
    title: "Launch & Learn",
    description:
      "Share your work with the community, gather insights, and prepare for your next project with new knowledge.",
    icon: "üöÄ",
  },
